# Production Environment Configuration for Grumble Backend

# Database - MongoDB Atlas (Free Tier)
MONGODB_URI=mongodb+srv://grumble-admin:<password>@grumble-cluster.xxxxx.mongodb.net/grumble?retryWrites=true&w=majority

# JWT Configuration (Generate secure keys)
JWT_SECRET=grumble-super-secure-jwt-secret-key-2024-production-make-it-very-long-and-random-for-security
JWT_EXPIRE=7d

# Server Configuration
PORT=10000
NODE_ENV=production

# Frontend URLs (Will be updated with actual URLs)
CLIENT_URL=https://grumble-frontend.vercel.app
FRONTEND_URL=https://grumble-frontend.vercel.app

# Session Configuration
SESSION_SECRET=grumble-session-secret-key-2024-production-make-it-secure-and-random

# Rate Limiting (Free tier friendly)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Email Configuration (Gmail for quick setup)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-gmail-app-password

# Google OAuth (Production credentials)
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Facebook OAuth (Production credentials)
FACEBOOK_APP_ID=your-production-facebook-app-id
FACEBOOK_APP_SECRET=your-production-facebook-app-secret

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=uploads/

# Security Headers
TRUST_PROXY=true

# Logging
LOG_LEVEL=info
